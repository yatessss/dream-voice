/**index.wxss**/
page {
  background: #F6F6F6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  position: relative;
}
.main{
  padding: 0rpx;
}
.show{
  display: block;
}
.hide{
  display: none;
}
.tab-content-recommend,
.tab-content-hot{
  max-width: 750rpx;
  height: 50rpx;
  padding: 20rpx;
  background: #fff;
  border-bottom: 2rpx solid rgb(223, 220, 220);
}
.rankList-title-week{
  background-color: #F6F6F6;
  font-size: 34rpx;
  position: fixed;
  height: 65rpx;
  line-height: 65rpx;
  padding: 10rpx;
  width: 100%;
  box-sizing: border-box;
  vertical-align: middle;
}
.rankList-content-week{
  padding-top: 85rpx;
}
.rankList-content-month{
  padding-top: 15rpx;
}
.rankList-title-month{
  background-color: #F6F6F6;
  font-size: 34rpx;
  height: 65rpx;
  line-height: 65rpx;
  width: 100%;
  padding: 10rpx;
  box-sizing: border-box;
}
.rankList-title-image{
  width: 35rpx;
  height: 35rpx;
}
.recommend-book-left{
  display: inline-block;
}
.recommend-book-number{
  display: inline-block;
}
.recommend-book-name{
  display: inline-block;
}
.recommend-book-name-hot{
  color: #ff8862;
}
.recommend-book-author{
  float: right;
  font-size: 25rpx;
  color: rgb(201, 196, 196);
}
.focus-title,
.recommend-title{
  font-size: 30rpx;
  margin: 10rpx 0;
  overflow:hidden;
  white-space:nowrap;
  text-overflow:ellipsis;
}
.focus-content,
.recommend-content{
  max-width: 700rpx; 
  display: -webkit-box; 
  word-break: break-all;
  text-overflow: ellipsis;
  font-size: 28rpx;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
  color: #666;
  line-height: 1.6;
}
.focus-footer,
.recommend-footer,
.hot-footer-text{
  margin: 15rpx 0;
  color: #999;
  font-size: 26rpx;
}
.to-recommend-img{
  width: 200rpx;
  height: 200rpx;
  display: block;
  margin: 50rpx auto;
}
.to-recommend-title{
  font-size: 44rpx;
  color: #cdcdcd;
  font-weight: 500;
  text-align: center;
}
.to-recommend-tip{
  color: #1E8AE8;
  font-size: 32rpx;
  text-align: center;
  margin: 20rpx;
}
.load-more{
  color: #cdcdcd;
  text-align: center;
  margin: 15rpx 0;
}
.is-loading{
  width: 25rpx;
  height: 25rpx;
  margin-right: 10rpx;
}
.tab-content-hot{
  height: 150rpx; 
  margin-bottom: 2rpx;
}
.hot-index,
.hot-title{
   display: inline-block; 
   vertical-align: top; 
}
.hot-index,
.hot-title{
  font-size: 34rpx;
}
.hot-index{
  width: 50rpx;
  color: #E6DA7A;
}
.hot-index-hot{
  color: orangered;
}
.hot-title{
  max-width: 470rpx;
  display: -webkit-inline-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
  line-height: 1.6;
  margin-right: 20rpx;
  margin-left: 10rpx;
} 
.hot-image{
  width: 150rpx;
  height: 100rpx;
  border-radius: 10rpx;
}
.hot-footer-text{
  margin-left: 60rpx;
}