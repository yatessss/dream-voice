page {
  background: #F6F6F6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  position: relative;
  padding-bottom: 40rpx;
}
.search-page-wrapper{
  width: 750rpx;
  height: 60rpx;
  line-height: 60rpx;
  padding: 15rpx;
  background: #ff8862;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
  text-align: center;
}
.search-page-text{
  width: 650rpx;
  font-size: 35rpx;
  display: inline-block;
  height: 60rpx;
  line-height: 60rpx;
  background-color: #fff;
  border-radius: 10rpx;
  text-align: left;
  padding-left: 10rpx;
}
.search-page-button{
  height: 60rpx;
  line-height: 60rpx;
  font-size: 35rpx;
  display: inline-block;
  color: #fff;
  padding-left: 15rpx;
}
.search-page-button-icon{
  width: 40rpx;
  height: 40rpx;
  display: inline-block;
  vertical-align: middle;
}
.search-page-item{
  border-bottom: 2rpx solid rgb(163, 160, 160);
  background-color: #fff;
  padding: 30rpx;
  box-sizing: border-box;
}
.search-page-item-name{
  float: left;
  font-size: 35rpx;
}
.search-page-item-author{
  float: right;
  font-size: 30rpx;
  color: rgb(158, 157, 157);
}
.search-page-item-clear{
  clear: both;
}
.search-page-result{
  padding-top: 90rpx;
}