page {
  background: #F6F6F6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  position: relative;
  padding-bottom: 40rpx;
}
.userinfo {
  margin-top: 40rpx;
  height: 140rpx;
  width: 100%;
  background: #FFF;
  border: 2rpx solid rgba(0, 0, 0, .1);
  border-left: none;
  border-right: none;
  display: flex;
  flex-direction: row;
  align-items: center;
  transition: all 300ms ease;
}
.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  margin-right: 40rpx;
  border-radius: 50%;
  margin-left: 30rpx;
}
.userinfo-nickname {
  font-size: 32rpx;
  color: #323233;
  display: inline-block;
}
.userinfo-member{
  display: inline-block;
}
.userinfo-vip-image{
  width: 80rpx;
  height: 55rpx;
  margin-bottom: -15rpx;
}
.userinfo-tip{
  color: #cdcdcd;
  font-size: 24rpx;
}
.userinfo-clickLogin{
  color: #ff8862;
  height: 114rpx;
  line-height: 114rpx;
}
.userinfo-info{
  position: relative;
  width: 600rpx;
}
.userinfo-login{
  height: 114rpx;
  line-height: 114rpx;
  width: 600rpx;
  position: relative;
}
.user-list{
  width: 750rpx;
  margin-top: 40rpx;
  text-align: left;
  border: 2rpx solid rgba(0, 0, 0, .1);
  border-left: none;
  border-right: none;
  background: #FFF;
}
.user-list-item{
  max-width: 750rpx; 
  position: relative;
  font-size: 38rpx;
}
.user-list-icon{
  width: 50rpx;
  height: 50rpx;
  display: inline-block;
  vertical-align: middle;
  margin: 0 20rpx;
  border-radius: 10rpx;
}
.userinfo-avatar-more{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right: 20rpx;
  bottom: 35rpx;
}
.user-list-vipTime{
  color: #cdcdcd;
  position: absolute;
  top: 20rpx;
  right: 77rpx;
  font-size: 30rpx;
}
.user-list-more{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 20rpx;
  right: 20rpx;
}
 .user-list-title{
  font-size: 35rpx;
  color: #323233;
  display: inline-block;
  padding: 20rpx 0 20rpx 25rpx;
  width: 100%;
  border-bottom: 1rpx solid #ddd;
  box-sizing: border-box;
} 